{
  "name": "fullstack-app",
  "scripts": {
    "install-client": "cd client && npm install",
    "build-client": "cd client && npm run build",
    "start": "node server/server.js",
    "dev": "concurrently \"npm run start\" \"npm start --prefix client\"",
    "postinstall": "npm run install-client && npm run build-client"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "lorem-ipsum": "^2.0.8",
    "mongoose": "^8.15.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router": "^7.6.1",
    "react-router-dom": "^7.6.1"
  }
}
